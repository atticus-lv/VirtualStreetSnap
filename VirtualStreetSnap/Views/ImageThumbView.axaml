<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:VirtualStreetSnap.ViewModels"
             xmlns:models="clr-namespace:VirtualStreetSnap.Models"
             mc:Ignorable="d" d:DesignWidth="100" d:DesignHeight="100"
             x:Class="VirtualStreetSnap.Views.ImageThumbView"
             x:DataType="models:ImageBase"
             Width="100" Height="100">
    
    <Design.DataContext>
        <models:ImageBase />
    </Design.DataContext>
    
    <Border  CornerRadius="5" Padding="2">
        <Image Source="{Binding Image}" Stretch="UniformToFill" ToolTip.ShowDelay = "500">
            <ToolTip.Tip >
                <StackPanel >
                    <TextBlock Text="{Binding ImgName}" />
                    <TextBlock Text="{Binding ImgSize}" />
                </StackPanel>
            </ToolTip.Tip>
        </Image>
    </Border>
</UserControl>