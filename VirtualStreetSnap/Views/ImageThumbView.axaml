<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:VirtualStreetSnap.ViewModels"
             mc:Ignorable="d" d:DesignWidth="100" d:DesignHeight="100"
             x:Class="VirtualStreetSnap.Views.ImageThumbView"
             x:DataType="viewModels:ImageThumbViewModel"
             Width="100" Height="100"
             >
    
    <Design.DataContext>
        <viewModels:ImageThumbViewModel />
    </Design.DataContext>
    
    <Border  CornerRadius="5" Padding="2">
        <Image Source="{Binding Image}" Stretch="UniformToFill"/>
    </Border>
</UserControl>